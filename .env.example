# SearchFlow Environment Configuration
# Copy this to .env and fill in your values

# SearXNG Configuration
SEARXNG_URL=http://localhost:8888
SEARXNG_SECRET=your_secret_key_here
SEARXNG_ENGINES=google,bing,duckduckgo

# LLM Configuration (for DSPy)
# LLM Provider: "ollama", "groq", "gemini", "openai", or "openrouter"
LLM_PROVIDER=groq

# Google Gemini API Key (best free tier!)
GEMINI_API_KEY=your-gemini-key-here
GEMINI_MODEL=gemini-2.0-flash-lite
GEMINI_MAX_TOKENS=1000
GEMINI_TEMPERATURE=0.3

# Groq API Key (get free at https://console.groq.com)
GROQ_API_KEY=your-groq-key-here
GROQ_MODEL=llama-3.1-8b-instant
GROQ_MAX_TOKENS=500
GROQ_TEMPERATURE=0.3

# Ollama Configuration (local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_MAX_TOKENS=1000
OLLAMA_TEMPERATURE=0.3

# Legacy OpenAI (optional)
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4o-mini

# OpenRouter Configuration (get key at https://openrouter.ai)
OPENROUTER_API_KEY=sk-or-v1-your-key-here
OPENROUTER_MODEL=nvidia/nemotron-nano-12b-v2-vl:free
OPENROUTER_MAX_TOKENS=5000
OPENROUTER_TEMPERATURE=0.3

# FastAPI Configuration
DEBUG=false
LOG_LEVEL=INFO
ALLOWED_ORIGINS=http://localhost,http://localhost:8007
